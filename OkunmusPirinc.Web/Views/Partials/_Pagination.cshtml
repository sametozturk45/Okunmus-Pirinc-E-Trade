@using OkunmusPirinc.Entities.Concretes
@model ListItem
<div class="col-12 mt-5" id="pagination" data-active-page="@Model.CurrentPage">
    @if (Model.CurrentPage > 1)
    {
        <a href="@Url.Action("Urunler", "Product", new {page = Model.CurrentPage - 1})" class="pagination-btn"><</a>
    }
    else
    {
        <button class="pagination-btn" disabled><</button>
    }
    @for (
        int i = 1; i <= Model.PageCount; i++)
    {
        <a id="page-@i" href="@Url.Action("Urunler", "Product", new {page = i})" class="pagination-btn">@i</a>
    }

    @if (Model.PageCount > 1 && Model.PageCount != Model.CurrentPage)
    {
        <a href="@Url.Action("Urunler", "Product", new {page = Model.CurrentPage + 1})" class="pagination-btn">></a>
    }
    else
    {
        <button class="pagination-btn" disabled>></button>
    }
</div>

<script>
    let activePage = document.getElementById("pagination").dataset.activePage;
    let activeBtn = document.getElementById("page-" + activePage);
    activeBtn.classList.add("active-page");
</script>